FROM node:18

# Establece el directorio de trabajo
WORKDIR /app

# Copia solo los archivos necesarios para instalar dependencias
COPY package.json ./
COPY tsconfig*.json ./
COPY .npmrc ./

# Instala las dependencias
RUN npm install

# Copia el resto del c√≥digo fuente
COPY . .

# Compila el proyecto TypeScript
RUN npm run build

# Expone el puerto
EXPOSE 8080

# Comando de inicio
CMD ["npm", "run", "start"]
